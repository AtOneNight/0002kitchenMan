						+ddItem("van","Оплата при получении",`123123123`)
						+ddItem("listcamera","Безналичный расчет","123123")
				.col-md-auto
					+bannerSwiper("img/@2x/sDapBanner1.png","img/@2x/sDapBanner1.png","img/@2x/sDapBanner1.png")

	// end sDap2
