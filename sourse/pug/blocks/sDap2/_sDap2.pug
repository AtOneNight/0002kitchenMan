	+e.sw-pag.swiper-pagination
mixin ddItem(iconName,htext,paraph)
	+e.dd-box.delivery-dd-item
		+e.head.dd-head-js
			+e.h-row.align-items-center.row
				.col-auto
					+e.h-icon
						+icon(iconName)
				.col
					+e.title=htext
				.col-auto
					+e.chevron
						+icon("chevron-down")
		+e.content.dd-content-js
			p!=paraph