mixin sDap2(data)
	// start sDap2
	+b.SECTION.sDap2.section#sDap2&attributes(attributes)
		.container
			+breadcrumb("Главная","Доставка и оплата")
			.section-title
				h2 Доставка и оплата
			.tabs
				+e.btn-row.tabs__caption.row
					.col-auto
						+e.btn.tabs__btn(type="submit") Способы доставки
					.col-auto
						+e.btn.tabs__btn.active(type="submit") Способы оплаты
				.tabs__content
					+deliveryContent()
				.tabs__content.active
					+payContent()

	// end sDap2
