mixin sDap2(data)
	// start sDap2
	+b.SECTION.sDap2.section#sDap2&attributes(attributes)
		.container
			+breadcrumb("Главная","Доставка и оплата")
			.section-title
				h2 Доставка и оплата
			.row
				.col-12.col-md-6.col-lg-7.col-xl-8.col-xxl-9
					+e.btn--second(type="submit") Способы доставки
					+e.btn(type="submit") Способы оплаты
					+acordion()
				.col-12.col-md-6.col-lg-5.col-xl-4.col-xxl-3
					+bannerSwiper()

	// end sDap2
mixin bannerSwiper()
	+e.sw-con.swiper-container.kart-slider-js
		.swiper-wrapper
			+e.sw-sl.swiper-slide
				img(src="img/@2x/sDapBanner.png" loading='lazy' alt="#")
			+e.sw-sl.swiper-slide
				img(src="img/@2x/sDapBanner.png" loading='lazy' alt="#")
			+e.sw-sl.swiper-slide
				img(src="img/@2x/sDapBanner.png" loading='lazy' alt="#")
	+e.sw-pag.swiper-pagination
